        <view class="class-con" id="sunday" style="background-color:{{color[0][6]}}">
          <view>
            <text class="class-name">{{className.threeF[6]}}</text>
            <text>{{classRoom.threeF[6]}}</text>  
          </view>
          
        </view>
      </view>
      <!-- 56节 -->
      <view class="class56">
        <view class="table-time">
          <text>5</text>
          <text>6</text>
        </view>
        <view wx:for="{{[0,1,2,3,4,5]}}" style="background-color:{{color[2][item]}}" class="class-con" bindtap="bindAppear" data-classname="{{className.fiveS[item]}}" data-classroom="{{classRoom.fiveS[item]}}" data-classweek="{{classWeekday[item]}}" data-classtime="56节">
