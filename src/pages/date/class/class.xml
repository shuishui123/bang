<view class="class">
  <!-- 标题部分 -->
  <view class="title">
    <text class="title-name">{{name}}</text>
    <text class="title-num">{{stuNumber}}</text>
    
    
    <picker class="title-week" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
      <view>
        <text>{{array[index]}}</text>
        <image src="{{imgUrl}}/down.png"></image>
      </view>
      
    </picker>
    
  </view>
  <!-- 课表部分 -->
  <view class="table">
    <view class="table-week">
      <text>一</text>
      <text>二</text>
      <text>三</text>
      <text>四</text>
      <text>五</text>
      <text>六</text>
      <text>日</text>
    </view>
    <view class="class-body">
      <!-- 12节 -->
      <view class="class12">
        <view class="table-time">
          <text>1</text>
          <text>2</text>
        </view>

        <view wx:for="{{[0,1,2,3,4,5]}}" style="background-color:{{color[0][item]}}" class="class-con" bindtap="bindAppear" data-classname="{{className.oneT[item]}}" data-classroom="{{classRoom.oneT[item]}}" data-classweek="{{classWeekday[item]}}" data-classtime="12节">
          <view>
            <text class="class-name">{{className.oneT[item]}}</text>
            <text>{{classRoom.oneT[item]}}</text>  
          </view>
          
        </view>
        <view class="class-con" id="sunday" style="background-color:{{color[0][6]}}">
          <view>
            <text class="class-name">{{className.oneT[6]}}</text>
            <text>{{classRoom.oneT[6]}}</text>  
          </view>
          
        </view>
      </view>
      <!-- 34节 -->
      <view class="class34">
        <view class="table-time">
          <text>3</text>
          <text>4</text>
        </view>
